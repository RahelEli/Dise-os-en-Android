<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.usuario.proyectohospital.MainActivity"
    android:background="#9e9b9b">

  <TextView
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="LISTA LLAMADAS EMERGENCIAS"
      android:id="@+id/emergencia"
      android:textColor="#f70d0d"
      android:textAlignment="center" />

  <ListView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/lv01"
      android:layout_below="@+id/emergencia"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="55dp"
      android:visibility="visible"
      android:forceHasOverlappingRendering="false"
      android:background="#f3e4e6" />

  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Anterior"
      android:id="@+id/anterior"
      android:layout_below="@+id/emergencia"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_marginTop="30dp"
      android:visibility="invisible" />

  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Siguiente"
      android:id="@+id/siguiente"
      android:layout_below="@+id/emergencia"
      android:layout_alignParentRight="true"
      android:layout_alignParentEnd="true"
      android:layout_marginTop="30dp"
      android:visibility="invisible" />


</RelativeLayout>
